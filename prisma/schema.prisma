// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Movie {
  id    Int          @id @default(autoincrement())
  title String
  year  Int
  cover File?
  posts Avaliation[]
}

model File {
  id          Int    @id @default(autoincrement())
  fileName    String
  contentType String
  url         String
  movie       Movie  @relation(fields: [movieId], references: [id])
  movieId     Int    @unique
}

model Avaliation {
  id         Int     @id @default(autoincrement())
  movie      Movie   @relation(fields: [movieId], references: [id])
  movieId    Int
  avaliation Int
  userEmail  String
  comment    String?
}
